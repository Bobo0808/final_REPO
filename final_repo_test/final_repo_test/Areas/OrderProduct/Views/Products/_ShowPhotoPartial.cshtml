@model final_repo_test.Models.Product;

@if (Model.P_Image != null)
{
    <img class="img-fluid img-thumbnail" src="@Url.Content($"~/images/{Model.P_Image}")"
         title="@Html.DisplayFor(model=>model.P_Name)" />
}
else
{
    <img class="img-fluid img-thumbnail" src="@Url.Content("~/images/No_Image_Available.jpg")"
         title="尚無圖片" />

}
