@model ClassLibrary.Models.Order;
@section Styles{
    <link href="~/css/orderproduct/edit.min.css" rel="stylesheet" />
}


@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <h1>Edit</h1>

    <h4>Order</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" asp-route-id="O_ID" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="O_ID" />
                <div class="form-group">
                    <label asp-for="A_ID" class="control-label"></label>
                    <select asp-for="A_ID" class="form-control" asp-items="ViewBag.A_ID"></select>
                    <span asp-validation-for="A_ID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="O_Date" class="control-label"></label>
                    <input asp-for="O_Date" class="form-control" />
                    <span asp-validation-for="O_Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="O_TotalPrice" class="control-label"></label>
                    <input asp-for="O_TotalPrice" class="form-control" />
                    <span asp-validation-for="O_TotalPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="O_Cancle" class="control-label"></label><br>
                    <input type="checkbox" asp-for="O_Cancle" class="form-check-input" />
                    <span asp-validation-for="O_Cancle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-secondary" />
                </div>
               
            </form>
            <div class="form-group mt-3">

                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

</div>
@section Script {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}