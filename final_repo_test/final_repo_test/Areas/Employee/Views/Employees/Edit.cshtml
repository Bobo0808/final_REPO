@model final_repo_test.Models.Employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
    //Layout = null;
}
@section Styles{
    <link href="~/css/Employee/E_Editstyle.css" rel="stylesheet" />
    @*<link href="~/css/AccountStyle/addstyle.css" rel="stylesheet" />*@
}

<body>

    <div class="container">
        <header>編輯員工</header>

        <form method="post" asp-action="Edit">
            <div class="form first">
                <div class="details personal">
                    <span class="title">個人資料</span>

                    <div class="fields">
                        <div class="input-field">
                            <label>全名</label>
                            <input type="text" placeholder="輸入名稱" required asp-for="E_Name">
                        </div>

                        <div class="input-field">
                            <label>使用者名稱</label>
                            <input type="text" placeholder="輸入使用者名稱" required asp-for="E_UserName">
                        </div>

                        <div class="input-field">
                            <label>性別</label>
                            <select required asp-for="E_Gender">
                                <option disabled selected>選性別</option>
                                <option value="男">男</option>
                                <option value="女">女</option>
                                <option value="其他">其他</option>
                            </select>
                        </div>

                        <div class="input-field">
                            <label>密碼</label>
                            <input type="text" placeholder="輸入密碼" required asp-for="E_Pwd">
                        </div>

                        <div class="input-field">
                            <label>地址</label>
                            <input type="text" placeholder="輸入地址" required asp-for="E_Address">
                        </div>

                        <div class="input-field">
                            <label>生日</label>
                            <input type="date" placeholder="輸入生日" required asp-for="E_Birthday">
                        </div>

                        <div class="input-field">
                            <label>電子郵件</label>
                            <input type="text" placeholder="輸入電子郵件" required asp-for="E_Email">
                        </div>

                        <div class="input-field">
                            <label>手機</label>
                            <input type="text" placeholder="輸入手機" required asp-for="E_Phone">
                        </div>

                        <div class="input-field">
                            <label>職位</label>
                            <select required asp-for="E_Title">
                                <option disabled selected>選職位</option>
                                <option value="員工">員工</option>
                                <option value="主管">主管</option>
                            </select>
                        </div>

                    </div>
                </div>

                <div class="details ID">
                    <span class="title">公司資料</span>

                    <div class="fields">
                        <div class="input-field">
                            <label>ID</label>
                            <input type="text" placeholder="輸入ID" required asp-for="E_ID" readonly>
                        </div>

                        <div class="input-field">
                            <label>狀態</label>
                            <select required asp-for="E_Work">
                                <option disabled selected>狀態</option>
                                <option value="True">在職</option>
                                <option value="False">離職</option>
                            </select>
                        </div>
                        <div class="input-field">
                            <label>就職日</label>
                            <input type="date" placeholder="輸入就職日" required asp-for="E_HireDate">
                        </div>
                    </div>

                    <button class="sumbit">
                        <span class="btnText">儲存</span>
                        <i class="uil uil-navigator"></i>
                    </button>
                </div>
            </div>

        </form>
        <a asp-area="Employee" asp-controller="Employees" asp-action="Index" asp-route-id="" class="btn"><i class=" fa fa-sharp fa-solid fa-arrow-left"></i>回上一頁</a>
    </div>


</body>
