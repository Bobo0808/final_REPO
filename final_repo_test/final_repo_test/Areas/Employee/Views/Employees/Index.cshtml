@model IEnumerable<final_repo_test.Models.Employee>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Employee";
    Layout = "_Layout";
}
@section Styles{
    <link href="~/css/employee/e_index.css" rel="stylesheet" />
@*    <link href="~/css/AccountStyle/addstyle.css" rel="stylesheet" />*@
}

<div class="container">
    <div class="content">
        <div class="content-2">
            <div class="acount">
                <div class="title">
                    <h2>員工資料表</h2>
                    <a asp-area="Employee" asp-controller="Employees" asp-action="Create" class="btn"><i class="fa fa-solid fa-plus"></i>新增</a>
                </div>

                <table>
                    <tr>
                        <th>姓名</th>
                        <th>使用者名稱</th>
                        <th>性別</th>
                        <th>權限</th>
                        <th>電話</th>
                        <th>職位</th>
                        <th>狀態</th>
                        <th>編輯</th>
                        <th>詳細資料</th>
                        <th>刪除</th>
                    </tr>

                    @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.E_Name)
                        </td>
                        <td>
                            
                                @Html.DisplayFor(modelItem => item.E_UserName)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.E_Gender)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.E_Permission)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.E_Phone)
                        </td>
                        <td>
                            
                                @Html.DisplayFor(modelItem => item.E_Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.E_Work)
                        </td>
                        <td>
                             <a asp-action="Edit" asp-route-id="@item.E_ID" class="fa-regular fa-pen-to-square" style="color:bisque"></a>
                        </td>
                        <td>
                                <a asp-action="Details" asp-route-id="@item.E_ID"><i class="fa fa-solid fa-eye" style="color:chartreuse"></i></a>
                        </td>
                        <td>
                                <a asp-action="Delete" asp-route-id="@item.E_ID" class="fa-solid fa-trash-can" style="color:red"></a>
                        </td>
                    </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>