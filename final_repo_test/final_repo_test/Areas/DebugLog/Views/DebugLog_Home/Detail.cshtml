@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Debug Log Detail";
    Layout = "_Layout";
}
@section Styles{
	<link href="~/css/debuglog/detail.css" rel="stylesheet" />
}
<div class="container">
    <div class="row title">詳細資料</div>
    <div class="row body">
        <div class="row content">
            <div class="col">ID</div>
            <div class="col">
                <input class="form-control" type="text" value="@Model.D_ID"
                       aria-label="@Model.D_ID" disabled readonly>
            </div>
        </div>
        <div class="row content">
            <div class="col">用戶ID</div>
            <div class="col">
                <input class="form-control" type="text" value="@Model.A_ID"
                       aria-label="@Model.A_ID" disabled readonly>
            </div>
        </div>
        <div class="row content">
            <div class="col">時間</div>
            <div class="col">
                <input class="form-control" type="text" value="@Model.D_time"
                       aria-label="@Model.D_time" disabled readonly>
            </div>
        </div>
        <div class="row content">
            <div class="col">事件</div>
            <div class="col event">
                <textarea class="form-control" disabled readonly
                          rows="3">@Model.D_event</textarea>
            </div>
        </div>
        <div class="row content">
            <div class="col">是否解決</div>
            <div class="col">
                @if (Model.D_isSolved == true)
                {
                    <input class="form-control" type="text" value="是"
                           aria-label="@Model.D_isSolved" disabled readonly>
                }else{
                    <input class="form-control" type="text" value="否"
                           aria-label="@Model.D_isSolved" disabled readonly>
                }
                
            </div>
        </div>
    </div>
    <div class="row">
        <div class="box buttonPrev">
            <a asp-area="DebugLog" asp-controller="DebugLog_Home" asp-action="Index" type="button" class="btn btn-primary">返回上一頁</a>
        </div>
    </div>
</div>

@section Script{
    <script>
        const tx = document.getElementsByTagName("textarea");
        for (let i = 0; i < tx.length; i++) {
            tx[i].setAttribute("style", "height:" + (tx[i].scrollHeight) + "px;overflow-y:hidden;");
            tx[i].addEventListener("input", OnInput, false);
        }

        function OnInput() {
            this.style.height = 0;
            this.style.height = (this.scrollHeight) + "px";
        }
    </script>
}